{% extends "::base.html.twig" %}

{% block content %}
    <div class="pure-g-r content-ribbon">
        <div class="pure-u-1">
            {% createphp cmfMainContent as="rdf" noautotag %}
            <div class="l-box" {{ createphp_attributes(rdf) }}>
                <h1 {{ createphp_attributes( rdf.title ) }}>{{ cmfMainContent.title }}</h1>
                <div id="main-content" {{ createphp_attributes(rdf.body) }}>{{ cmfMainContent.body|raw }}</div>
            </div>
            {% endcreatephp %}
        </div>
    </div>

    <div class="pure-g-r content-ribbon">
        {% for room in rooms %}
            <div class="pure-u-1-{{ rooms|length }}">
                <h2 class="track">{{ room.title }}</h2>
                {% for presentation in room.children %}
                    {% include "DbuConferenceBundle:Schedule:presentation_preview.html.twig" with {'presentation': presentation} %}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
